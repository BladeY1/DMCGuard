<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.speakerhome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.speakerhome.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ManufactureHome"
        tools:targetApi="31">
        <activity
            android:name="com.example.speakerhome.TokenApplyActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.AppSettingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.AboutActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.DeviceLogActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.AddDeviceActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.DeviceDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_device_detail"
            android:theme="@style/Theme.ManufactureHome.NoActionBar" />
        <activity
            android:name="com.example.speakerhome.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.speakerhome.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>